{
  "name": "@nejcm/rollup-plugin-size-snapshot-vite",
  "private": false,
  "version": "0.0.7",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "https://github.com/nejcm/rollup-plugin-size-snapshot-vite",
  "author": "Bogdan Chadkin <trysound@yandex.ru>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && babel dist --out-dir dist",
    "test": "jest",
    "prepublish": "yarn build"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.3",
    "@types/jest": "^29.1.1",
    "husky": "^4.3.8",
    "jest": "^29.1.2",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "strip-ansi": "^6.0.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "rollup": "^2.40.0"
  },
  "dependencies": {
    "@rollup/plugin-replace": "^4.0.0",
    "acorn": "^7.4.1",
    "bytes": "^3.1.2",
    "chalk": "^4.1.2",
    "gzip-size": "^6.0.0",
    "jest-diff": "^29.1.2",
    "memory-fs": "^0.5.0",
    "terser": "^5.15.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "14"
          }
        }
      ]
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx|js|jsx|mjs|cjs)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/(?!strip-ansi)",
      "fixtures/"
    ]
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6",
    "yarn": ">=1"
  }
}
